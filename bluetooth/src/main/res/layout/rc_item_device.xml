<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/device_type_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/device_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:drawableRight="@mipmap/ic_right_arrow"
        android:text="未配对" />

    <TextView
        android:id="@+id/device_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/device_type_img"
        android:layout_toEndOf="@id/device_type_img"
        android:layout_toLeftOf="@id/device_state_tv"
        android:layout_toStartOf="@id/device_state_tv"
        android:layout_centerVertical="true"
        android:text="无名字" />


</RelativeLayout>